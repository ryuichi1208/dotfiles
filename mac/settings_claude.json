{
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "List(*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(awk:*)",
      "Bash(bat:*)",
      "Bash(cat:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(uv sync)",
      "Bash(uv pip list)",
      "Bash(go version)",
      "Bash(go env)",
      "Bash(go mod tidy)",
      "Bash(perl --version)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(actionlint:*)",
      "Bash(mkdir -p ./:*)"
    ],
    "deny": [
      "Write(~/.zshrc)",
      "Write(~/.vimrc)",
      "Write(~/.claude/settings.json)"
    ],
    "defaultMode": "plan"
  },
  "env": {
    "ANTHROPIC_CUSTOM_HEADERS":
    {
      "X-Anthropic-Client": "claude"
    },
    "BASH_DEFAULT_TIMEOUT_MS": 120000,
    "DISABLE_TELEMETRY": "false"
  },
  "cleanupPeriodDays": 30
}
