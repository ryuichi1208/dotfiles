{
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "List(*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(awk:*)",
      "Bash(bat:*)",
      "Bash(cat:*)",
      "Bash(rg:*)",
      "Bash(uv sync), Bash(uv pip list)",
      "Bash(go version), Bash(go env), Bash(go mod tidy), Bash(go mod download)",
      "Bash(perl --version)",
      "Bash(actionlint:*)",
      "Bash(mkdir -p ./:*)"
    ],
    "deny": [
      "Write(~/.zshrc)",
      "Write(~/.vimrc)",
      "Write(~/.claude/settings.json)"
    ],
    "defaultMode": "plan"
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": 120000,
    "DISABLE_TELEMETRY": "false"
  }
}
